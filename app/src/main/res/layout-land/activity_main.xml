<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"

    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ImgSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:src="@drawable/baseline_question_mark_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/mulish_semibold"
            android:text="@string/timerText"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="80sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnReset"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@drawable/button_reset_landstyle"
            android:fontFamily="@font/mulish_extrabold"
            android:gravity="center"
            android:text="@string/btnResetText"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button

            android:id="@+id/btnStart"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@drawable/buttonstyle2"
            android:fontFamily="@font/mulish_extrabold"
            android:gravity="center"
            android:text="@string/buttonStartText"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btnStopOver"
            app:layout_constraintEnd_toEndOf="@+id/btnStopOver"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/btnStopOver"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.695" />


        <Button
            android:id="@+id/btnStopOver"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_break_landstyle"
            android:fontFamily="@font/mulish_extrabold"
            android:gravity="center"
            android:text="@string/buttonStopOverText"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1.0" />


    </LinearLayout>
</LinearLayout>