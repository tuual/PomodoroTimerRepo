<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:id="@+id/mainlayout"
    android:background="@color/bgcolor"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/ayarlarstyle">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ayarlar1Text"
            android:textSize="25sp"
            android:textColor="@color/white"/>

       <Switch
           android:id="@+id/ekranSwitch"
           android:layout_marginTop="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/white"
           android:textSize="20sp"
           android:switchPadding="5dp"
           android:text="KapalÄ±"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:background="@drawable/ayarlarstyle">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ayarlar2Text"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >
            <LinearLayout
                android:id="@+id/colorred"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/colorred"
                android:orientation="horizontal"
                tools:ignore="Orientation"> </LinearLayout>
            <LinearLayout
                android:id="@+id/colorpink"
                android:orientation="horizontal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/colorpink"> </LinearLayout>
            <LinearLayout
                android:id="@+id/colorpurple"
                android:layout_width="50dp"
                android:orientation="horizontal"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/colorpurple"> </LinearLayout>
            <LinearLayout
                android:id="@+id/colordeeppurple"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:orientation="horizontal"

                android:layout_marginLeft="10dp"
                android:background="@drawable/colordeeppurple"> </LinearLayout>
            <LinearLayout
                android:id="@+id/colorindigo"
                android:orientation="horizontal"

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/colorindigo"> </LinearLayout>
            <LinearLayout
                android:id="@+id/colorblue"
                android:orientation="horizontal"

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/colorblue"> </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal" >
            <LinearLayout
                android:id="@+id/colorgreen"
                android:layout_width="50dp"
                android:orientation="horizontal"

                android:layout_height="50dp"
                android:layout_marginTop="10dp"

                android:background="@drawable/colorgreen"> </LinearLayout>
            <LinearLayout
                android:id="@+id/colorgrey"
                android:orientation="horizontal"

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/colorgrey"> </LinearLayout>
            <LinearLayout
                android:id="@+id/coloryellow"
                android:orientation="horizontal"

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/coloryellow"> </LinearLayout>
            <LinearLayout
                android:id="@+id/colororange"
                android:orientation="horizontal"

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/colororange"> </LinearLayout>
            <LinearLayout
                android:id="@+id/colordeeporange"
                android:orientation="horizontal"

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/colordeeporange"> </LinearLayout>
            <LinearLayout
                android:id="@+id/colorbrown"
                android:orientation="horizontal"

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/colorbrown"> </LinearLayout>



        </LinearLayout>
        <ImageView
            android:id="@+id/completeColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_check_circle_24"
            android:layout_gravity="center"/>


    

</LinearLayout>
</LinearLayout>
